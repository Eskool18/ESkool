<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/js/site.js" />

</head>

<body style="background-color: #f1f1f1; padding: 15px; ">
    <div style=" background-color: white; text-align:center; padding: 30px;">
        <h1 style="font-size: 50px; font-weight: bold;">School Name</h1>
        <p>Few Discription for School</p>
    </div>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark" style="padding: 8px; margin: 8px;">
        <!-- Brand -->
        <a class="navbar-brand" href="#">Scool Name</a>

        <!-- Links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="#">Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Papers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Results </a>
            </li>

            <!-- Dropdown -->
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                    Manages
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Attendence</a>
                    <a class="dropdown-item" href="#">Classes</a>
                    <a class="dropdown-item" href="#">Subject</a>
                </div>
            </li>
        </ul>
    </nav>
    <!--mainDiv For Entire Page-->
    <div class="container-fluid">
        <!--main Row For Entire Page-->
        <div class="row">
            <div class="col-md-6 mb-6">
                <a href="~/GeneratePaper/selectSyllabus?subjectName=Physics" >
                    <button class="btn btn-outline-primary" style=" width:95%;margin-bottom:10px">
                        <div style="width:25%;float:left;margin-left:5px">
                            <img src="~/image/ptb.jpg" class="img-fluid" />
                        </div>
                        <div style="width:70%;float:right">
                            @{
                                if (ViewBag.className > 4 && ViewBag.className < 11)
                                {
                                    <h3> Physics - @ViewBag.className <sup>th</sup> </h3>
                                }
                                else if (ViewBag.className == 11)
                                {
                                    <h3> Physics - 1<sup>st</sup> Year </h3>
                                }
                                else
                                {
                                    <h3> Physics - 2<sup>nd</sup> Year </h3>
                                }
                                    <hr />
                                <p>Course : @ViewBag.name </p>
                            }
                        </div>
                    </button>
                </a>
            </div>
            <div class="col-md-6 mb-6">
                <a>
                    <button class="btn btn-outline-primary" style=" width:95% ;margin-bottom:10px">
                        <div style="width:25%;float:left">
                            <img src="~/image/ptb.jpg" class="img-fluid" />
                        </div>
                        <div style="width:70%;float:right">
                            @{
                                if (ViewBag.className > 4 && ViewBag.className < 11)
                                {
                                    <h3> Math - @ViewBag.className <sup>th</sup> </h3>
                                }
