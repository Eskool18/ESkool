@model List<UserInfo>

@{
    ViewBag.Title = "setPaper";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<style>
    input,select {
        border-color: #22a1b782;
        margin: 1%;
    }
    input{
        width:9%;
    }
    
    button:hover {
        box-shadow: -6px 6px 0px 0 #22a1b782;
        background: rgb(145 74 140 / 45%);
    }
    #select-Mcq , #ques{
        margin: 1%;
        border: 1px solid #adb5bdd6;
        padding: 2%;
        background-color: #adb5bd1a;
    }
    #choices {
        justify-content: space-around;
        display: flex;
    }
    .class-card {
        background-color: #45788a14;
        padding: 1%;
        border: 2px dashed #467a8b2b;
    }
    button {
        color: #ffffff;
        margin: 0% 10%;
        box-shadow: -6px 6px 0px 0 rgb(145 74 140 / 45%);
        font-size: 18px;
        border: none;
        padding: 0% 3%;
        background: #22a1b782;
    }
</style>
<div class="cards-container">

    <div class="class-div">
        <div class="class-card">
            <label for="ques-type">Select type:</label>

            <select name="ques-type" id="ques-type">
                <option value="mcq">Multiple Choice Question</option>
                <option value="long">Long Question</option>
                <option value="short">Short Question</option>
            </select>

            <label for="ques-area">Select Area:</label>

            <select name="ques-area" id="ques-area">
                <option value="all">Select All</option>
                <option value="exe">Exercise</option>
                <option value="add">Additional Questions</option>
                <option value="past">Past Papers</option>
            </select>
            <button id="search">
                Search
            </button>
            <br />
            <label for="req-ques">Required Questions</label>
            <input type="number" required id="req-ques" />
            <label for="ign-ques">Ignore Questions</label>
            <input type="number"  id="ign-ques" />
            <label for="each-ques">Each Question Marks</label>
            <input type="number" required id="each-ques" />
            <label for="blank">Blank Lines</label>
            <input type="number"  id="blank" />


        </div>
    </div>

    <div id="select-Mcq">
   
            <p> Statement here </p>
            <div id="choices">
                <p> (a) choice 1 </p>
                <p> (b) choice 2 </p>
                <p> (c) choice 3 </p>
                <p> (d) choice 4 </p>
            </div>
    
    </div>

    <div id="ques">
        <p> Question Statement </p>
    </div>

</div>