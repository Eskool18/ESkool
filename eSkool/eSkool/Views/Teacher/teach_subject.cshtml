@{
    ViewBag.Title = "teach_subject";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";

}

<style>
    .class-card {
        display: flex;
        height: 100%;
        flex-direction: row;
    }

    .class-banner {
        width: 18%;
        color: #beaacf;
        font-weight: bolder;
        text-align: center;
        border-left: 3px #75b1c6;
        border-left-style: outset;
        background: white;
    }

        .class-banner p {
            margin-top: 10%;
        }

    .class-div {
        color: whitesmoke;
        box-shadow: 0px 10px 10px 0 rgb(171 169 202), 0 15px 30px 0 rgb(221 219 221 / 60%);
        width: 29%;
        background-color: #2ca4bab8;
        margin: 2%;
    }
    

    .class-detail {
        width: 100%;
        margin: 10px;
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
    }

    .sub-div {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;
    }

    .sub-card img {
        width: 100%;
        height: 50%;
    }

    .class-detail i {
        color: #4a7586;
        font-size: 20px;
        padding: 5px;
    }

    .class-detail a {
        color: white;
        margin-left: 10%;
    }

    .class-detail h2 {
        text-align: center;
    }

    .sub-card {
        margin: 10px;
        background-color: #ecc0da;
        width: 30%;
        height: 25%;
        margin-top: 20px;
        padding: 0;
        text-align: center;
        display: flex;
        flex-wrap: wrap;
        flex-direction: column;
    }
</style>

<div class="sub-div">
     
    @for (int i = 0; i < 3; i++)
    {
        <div class="class-div">
            <div class="class-card">
                <div class="class-banner">
                    <p>
                        9<br />T<br />H
                    </p>
                </div>
                <div class="class-detail">
                    @*<i class="fas fa-shapes"></i>*@
                    <h2>@i </h2>
                    <a href="/Teacher/upload_gradebook"><i class="fas fa-trophy"></i>&nbsp; Gradebook</a>
                    <a href="/Teacher/upload_helping_material"><i class="fas fa-book-open"></i>&nbsp; Helping Material</a>
                    <a href="/Teacher/post_class_announcement"><i class="fas fa-bell"></i>&nbsp; Announcements</a>
                    
                </div>
            </div>
        </div>
    }


</div>
