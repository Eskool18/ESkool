        flex-wrap: wrap;
        justify-content: center;
    }
    .sub-card img {
        width: 100%;
        height: 50%;
    }
    .class-detail i {
        color: #954587;
        font-size:20px;
        padding:5px;
       
    }
    .class-detail a{
        color: white;
        margin-left:10%;
    }
    .class-detail h2{
        text-align:center;
    }
    .sub-card {
        margin: 10px;
        background-color: #ecc0da;
        width: 30%;
        height: 25%;
        margin-top: 20px;
        padding: 0;
        text-align: center;
